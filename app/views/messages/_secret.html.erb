<% if @messages[:secret_messages][0] %>
<% @messages[:secret_messages].each do |message| %>
<div class="<%= message.id %>-secret">
  <button type="button" class="red btn btn-link btn-xs">
    <div class="glyphicon glyphicon-remove secret" id="<%= message.id %>">
    </div> 
    <a href="#<%= message.id %>"></a> 
  </button>
      
  <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
    <%= message.title %>
  </button>
     
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= message.title %></h4>
        </div>
      
        <div class="modal-body">
          <%= message.body %>
        </div>
      
        <div class="modal-footer">
        
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Close
          </button>
        
        </div>
      </div>
    </div>
  </div>
</div>

  <% end %>
  <% else %>
  <%= "Good things come to those who act." %>
  <% end %>

